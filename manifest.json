{
  "manifest_version": 2,
  "name": "Trakt Enhancer",
  "description": "This extension add progression in trakt person page and support of torrent yify",
  "version": "1.3",
  "permissions": [
    "http://trakt.tv/",
    "http://yify-torrents.com/"
  ],
  "content_scripts": [
    {
      "matches": [
        "http://trakt.tv/*"
      ],
      "js": [
        "jquery-2.0.0.min.js",
        "handlebars.js",
        "person-trakt-progress.js",
        "yify-enhancer.js",
        "trakt-enhancer.js"
      ],
      "css": [
        "show.20130429.css"
      ]
    }
  ],
  "web_accessible_resources": [
    "person-trakt-progress.ms.html"
  ]
}